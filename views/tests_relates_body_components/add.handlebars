<h1>Add story</h1>
<div class="row">
    <form action="/tests" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title">
                <lable for="title">Title</lable>
            </div>
        </div>

         <div class="row">
            <div class="input-field">
                <select name="status">
                    <options value="public" selected>Public</options>
                    <options value="private">Private</options>
                    <options value="unpublished">Unpublished</options>

                </select>
                <lable for="status">Status</lable>
            </div>
        </div>

        <div class="row">
            <p>
               <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" checked="checked">
               <lable for="filled-in-box">Allow Comments</lable>
            </p>
        </div>

         <div class="row">
            <div class="input-field">
               <h5>Tell us your story</h5>
                <textarea name="body"></textarea>
            </div>
        </div>

<input type="submit" value="Save" class="btn">
    </form>
</div>